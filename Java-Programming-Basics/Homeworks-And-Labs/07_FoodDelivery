
package L01_FirstStepsInCoding_Exercise;
import java.util.Scanner;
public class P07_FoodDelivery {
    public static void main(String[] args){
        Scanner scanner = new Scanner(System.in);

        int countChickenMenu = Integer.parseInt(scanner.nextLine());
        int countFishMenu = Integer.parseInt(scanner.nextLine());
        int countVeganMenu = Integer.parseInt(scanner.nextLine());


        double chickenMenu = 10.35;
        double fishMenu = 12.40;
        double veganMenu = 8.15;


        double chickenMenuPrice = countChickenMenu * chickenMenu;
        double fishMenuPrice = countFishMenu * fishMenu;
        double veganMenuPrice = countVeganMenu * veganMenu;

        double totalPriceForMenu = chickenMenuPrice + fishMenuPrice + veganMenuPrice;

        double desertPrice = totalPriceForMenu  * 0.20;

        double pricePerDelivery = 2.50;

        double totalPrice = totalPriceForMenu + desertPrice + pricePerDelivery;

        System.out.println(totalPrice);






    }

}
